<world>
    <window width="512" height="512" />
    <camera>
        <position x="30" y="40" z="80" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="30" near="1" far="1000" />
    </camera>
    <group> <!-- Saturn -->
        <transform>
            <rotate angle ="30" x="0" y="1" z="0"/> <!-- Rotação relativa ao Sol de Saturno-->
            <translate x="66" y="0" z="0"/> <!-- Distância de Saturno ao Sol -->
        </transform>
        <group> <!-- Planeta Saturno -->
            <transform>
                <scale x="5" y="5" z="5"/> <!-- Tamanho de Saturno -->
            </transform>
            <models>
                <model file="sphere.3d" /> <!-- Saturno -->
            </models>
        </group>
        <group> <!-- Anel de Saturno -->
            <transform>
                <scale x="6" y="0.1" z="6"/> <!-- Tamanho do anel de Saturno -->
            </transform>
            <models>
                <model file="ring.3d" /> <!-- Anel de Saturno -->
            </models>
        </group>
    </group>
</world>
